@model List<Kullanici>
<div class="card">
    <div class="car-header">
        <h3>Kullanicilar</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover table-primary">
            <thead>
                <tr>
                    <td>Kullanici Kodu</td>
                    <td>Adi</td>
                    <td>Soyadi</td>
                    <td>Email</td>
                    <td>Role</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.KullaniciId</td>
                        <td>@item.Adi</td>
                        <td>@item.Soyadi</td>
                        <td>@item.Email</td>
                        <td>@item.Roller.FirstOrDefault()</td>
                        <td><a asp-action="Update" asp-controller="Kullanici" class="btn btn-success">Update</a></td>
                        <td><a asp-action="Delete" asp-controller="Kullanici" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>