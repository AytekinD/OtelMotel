@model List<Oda>
<a asp-action="Create" asp-controller="Oda" class="btn btn-primary">Oda Ekle</a>
<div class="card">
    <div class="car-header text-center">
        <h5><b>Odalar</b></h5>
    </div>
    <div class="card-body">
        <table class="table table-hover table-secondary">
            <thead>
                <tr>
                    <td>Oda No</td>
                    <td>Kisi Sayisi</td>
                    <td>Durum</td>
                    <td>Create Date</td>                    
                    <td>Kullanici</td>                    
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.OdaNo</td>
                            <td>@item.KisiSayisi</td>
                            <td>@item.Durum</td>
                            <td>@item.CreateDate</td>                            
                            <td>@item.KullaniciId</td>                            
                            <td><a asp-action="Update" asp-controller="Musteri" asp-route-Id="@item.Id" class="btn btn-outline-success ">Update</a></td>
                            <td><a asp-action="Delete" asp-controller="Musteri" asp-route-Id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
