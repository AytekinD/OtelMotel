@model List<Musteri>
<a asp-action="Create" asp-controller="Musteri" class="btn btn-primary">Yeni Kayit</a>
<div class="card">
    <div class="car-header text-center">
        <h5><b>Musteriler</b></h5>
    </div>
    <div class="card-body">
        <table class="table table-hover table-primary">
            <thead>
                <tr>
                    <td>Tc No</td>
                    <td>Ad</td>
                    <td>Soyad</td>
                    <td>Create Date</td>
                    <td>Cep Telefonu</td>
                    <td>Cinsiyet</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MusteriTcNo</td>
                        <td>@item.Ad</td>
                        <td>@item.Soyad</td>
                        <td>@item.CreateDate</td>
                        <td>@item.CepNo</td>
                        <td>@item.Cinsiyet</td>
                        <td><a asp-action="Update" asp-controller="Musteri" asp-route-Id="@item.Id" class="btn btn-outline-success ">Update</a></td>
                        <td><a asp-action="Delete" asp-controller="Musteri" asp-route-Id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
